{
  "description": "Model Context Protocol servers for ComicWise development",
  "servers": {
    "typescript": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-typescript"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "python": {
      "command": "python",
      "args": ["-m", "mcp.server.sse"],
      "env": {
        "MCP_INIT_TIMEOUT": "30000"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sqlite"],
      "args": ["--db-path", "${workspaceFolder}/comicwise.db"]
    }
  },
  "tools": {
    "typescript": ["analyze", "refactor", "suggest"],
    "python": ["lint", "format"],
    "sqlite": ["query", "inspect_schema", "analyze_performance"]
  }
}
