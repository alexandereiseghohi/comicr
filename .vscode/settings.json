{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.preferences.importModuleSpecifier": "relative",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit",
    "source.addMissingImports.ts": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.sortImports": "explicit"
  },
  "editor.rulers": [
    80,
    120
  ],
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/.out": true,
    "**/coverage": true,
    "**/.git": true
  },
  "files.exclude": {
    "**/node_modules": false,
    "**/.next": false,
    "**/dist": false,
    "tsconfig.tsbuildinfo": false,
    "**/.cache": false,
    "**/.turbo": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.bracketSameLine": false,
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.useModuleResolution": "bundler",
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "warning",
  "tailwindCSS.lint.invalidConfigPath": "warning",
  "tailwindCSS.lint.invalidScreen": "warning",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "git.ignoreLimitWarning": true,
  "gitlens.defaultDateFormat": "yyyy-MM-dd HH:mm:ss",
  "notebook.cellToolbarLocation": {
    "default": "right"
  },
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "chat.mcp.serverSampling": {
    "comicr/.vscode/mcp.json: typescript-enhanced": {
      "allowedModels": [
        "copilot/gpt-5.2-codex",
        "ollama/Ollama/1",
        "ollama/Ollama/0"
      ]
    }
  },
  // GitHub Copilot Model Configuration (40-Task Plan Requirement)
  "github.copilot.advanced": {
    "debug.overrideEngine": "ollama",
    "debug.overrideModel": "gemma:latest",
    "agent.model": "ollama/gemma:latest"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.inlineSuggest.enable": true,
  // MCP Server Optimization (Phase 2, Task 14 prep)
  "mcp.logLevel": "info", // Change to "debug" for troubleshooting
  "mcp.showTrace": false, // Enable for detailed MCP server traces
  "mcp.timeout": 30000, // 30 second default timeout for all MCP servers
  "mcp.enableCaching": true, // Cache MCP tool responses for performance
  "mcp.maxCacheSize": 100 // Maximum cache size in MB
}
