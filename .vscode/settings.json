{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Language-specific
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source": "always",
    "source.fixAll.eslint": "always",
    "source.fixAll.prettier": "always",
    "source.fixAll.shellcheck": "always",
    "source.organizeImports": "always",
    "source.sort.json": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Editor
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.insertSpaces": true,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.rulers": [
    100
  ],
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "files.associations": {
    "*.agent.md": "chatagent",
    "*.css": "tailwindcss",
    "*.instructions.md": "instructions",
    "*.prompt.md": "prompt"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/Thumbs.db": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Files
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.next/**": true,
    "**/node_modules/**": true
  },
  "git.autofetch": true,
  // Git
  "git.ignoreLimitWarning": true,
  "github.copilot.editor.enableCodeActions": true,
  // Copilot
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": false
  },
  "gitlens.defaultDateFormat": "yyyy-MM-dd HH:mm:ss",
  "redhat.telemetry.enabled": false,
  "search.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/.out": true,
    "**/.playwright": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/test-results": true,
    "pnpm-lock.yaml": true
  },
  // Tailwind CSS
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.validate": true,
  // Telemetry
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.suggest.autoImports": true,
  // TypeScript & ESLint
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "yaml.schemas": {
    "./.schemas/collection.schema.json": "*.collection.yml"
  }
}
