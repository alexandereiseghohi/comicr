{
  "type": "module",
  "name": "comicr",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config ./next-sitemap.config.ts",
    "start": "next start",
    "preview": "pnpm build && pnpm start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,css}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "typegen": "next typegen",
    "test": "pnpm test:unit",
    "test:unit": "vitest run tests/unit --environment jsdom",
    "test:unit:watch": "vitest watch tests/unit",
    "test:unit:coverage": "vitest run --coverage --environment jsdom tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run test:unit",
    "validate:full": "pnpm type-check && pnpm lint && pnpm test:unit && pnpm test:e2e",
    "validate:ci": "pnpm validate:full && pnpm build",
    "validate:env": "tsx scripts/validate-env.ts .env.example .env.local",
    "clean": "del .next out coverage test-results .playwright",
    "clean:all": "pnpm clean && del node_modules/.cache",
    "cleanup:reports": "del *.json *.csv *.log",
    "cleanup:cache": "del .next node_modules/.cache",
    "cleanup:all": "pnpm cleanup:reports && pnpm cleanup:cache",
    "cw": "tsx --env-file=.env.local scripts/cw.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts || echo 'Drizzle not configured'",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:pull": "drizzle-kit introspect --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:check": "drizzle-kit check --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=.env.local src/database/seed/main.ts",
    "db:seed:dry": "tsx --env-file=.env.local src/database/seed/main.ts --dry",
    "db:truncate": "tsx --env-file=.env.local scripts/db-truncate.ts",
    "db:reset": "pnpm db:truncate && pnpm db:seed",
    "db:backup:upload": "tsx --env-file=.env.local scripts/backup-database.ts --upload",
    "seed": "pnpm db:seed",
    "seed:dry": "pnpm db:seed:dry",
    "seed:merge": "tsx scripts/merge-seed-data.ts",
    "seed:api": "curl -X POST -H 'x-seed-api-key: $SEED_API_KEY' http://localhost:3000/api/dev/seed",
    "verify:links": "tsx scripts/verify-links.ts",
    "verify:seed": "tsx scripts/verify-seed-storage.ts -- --report=seed-storage-report.json",
    "verify:providers": "tsx scripts/verify-providers.ts",
    "verify:mcp": "tsx scripts/verify-mcp-packages.ts -- --report=mcp-packages-report.json",
    "verify:dal": "tsx scripts/verify-dal-usage.ts",
    "verify:all": "pnpm run validate:env && pnpm run verify:providers -- --report=providers-report.json && pnpm run verify:links -- --report=link-report.csv && pnpm run verify:mcp",
    "plan:run": "tsx --env-file=.env.local scripts/complete-plan.ts",
    "fix:chapters": "tsx --env-file=.env.local scripts/autofix-chapter-fields.ts",
    "report:chapters": "tsx scripts/report-missing-chapter-fields.ts",
    "cleanup:duplicates": "tsx --env-file=.env.local scripts/cleanup-duplicates.ts",
    "refactor:kebab": "tsx scripts/rename-to-kebab-case.ts",
    "refactor:ast": "tsx scripts/ast-refactor.ts",
    "seo:enhance": "tsx scripts/enhance-seo.ts",
    "perf:optimize": "tsx scripts/optimize-performance.ts",
    "sitemap": "next-sitemap",
    "analyze": "pnpm build --analyze",
    "analyze:deps": "pnpm list --depth=0",
    "analyze:bundle": "ANALYZE=true pnpm build",
    "update-deps": "pnpm update --latest --recursive",
    "check:updates": "pnpm outdated",
    "security-audit": "pnpm audit --audit-level moderate",
    "deploy:vercel": "vercel --prod",
    "mcp:playwright": "tsx scripts/mcp-integrations/playwright-integration.ts",
    "mcp:vitest": "tsx scripts/mcp-integrations/vitest-integration.ts",
    "mcp:github": "tsx scripts/mcp-integrations/github-integration.ts"
  },
